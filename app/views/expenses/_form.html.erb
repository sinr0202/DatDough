<%= form_for @expense, html: { role: "form" } do |f| %>
<div class="form-group">
  <%= f.label :date %>
  <%= f.date_field :date, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :amount %>
  <%= f.number_field :amount, step: 0.01, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :category %>
  <%= f.select :category, Expense.categories.keys.to_a, {}, {class: "form-control"} %>
</div>
<div class="form-group">
  <%= f.label :payment_method %>
  <%= f.select :payment_method, Expense.payment_methods.keys.to_a, {}, {class: "form-control"}%>
</div>
<div class="form-group">
  <%= f.label :transaction_type %>
  <%= f.select :transaction_type, Expense.transaction_types.keys.to_a, {}, {class: "form-control"} %>
</div>


<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, row: 3, class: "form-control"  %>
</div>
<%= f.submit class: "btn btn-primary" %>
<% end %><br/>
