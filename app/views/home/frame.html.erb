<body class="noScrollbar" layout="column" ng-controller="FrameController as fc">
    <md-toolbar id="toolbar" flex="10">
        <div class="md-toolbar-tools">

            <div layout="row" layout-align="start start" flex="15">
                <h1 class="logo" ng-click="fc.selectView(0)">DatDough</h1>
            </div>

            <span flex></span>

            <div class="icon-container" layout="row" layout-align="end center">
                <div ng-show="fc.isSignedIn" layout="row">
                    <div class="toolbarBtns" ng-click="fc.selectView(6)" layout="row" layout-align="center center">
                        <i title="Settings" class="material-icons">settings</i>
                        <span>Settings</span>
                    </div>
                    <div class="toolbarBtns" ng-click="fc.selectView(4)" layout="row" layout-align="center center">
                        <i title="Table" class="material-icons">assignment</i>
                        <span>Table</span>
                    </div>
                    <div class="toolbarBtns" ng-click="fc.selectView(5)" layout="row" layout-align="center center">
                        <i title="Graph" class="material-icons">equalizer</i>
                        <span>Graph</span>
                    </div>
                    <div class="toolbarBtns" ng-click="fc.signOut()" layout="row" layout-align="center center">
                        <i title="Sign Out" class="material-icons">exit_to_app</i>
                        <span>Sign Out</span>
                    </div>
                </div>
                <div ng-hide="fc.isSignedIn" layout="row">
                    <div class="toolbarBtns" ng-click="fc.selectView(2)" layout="row" layout-align="center center">
                        <i title="Sign Up" class="material-icons">create</i>
                        <span>Sign Up</span>
                    </div>
                    <div class="toolbarBtns" ng-click="fc.selectView(1)" layout="row" layout-align="center center">
                        <i title="Sign In" class="material-icons">exit_to_app</i>
                        <span>Sign In</span>
                    </div>
                </div>
            </div>
            
        </div>
    </md-toolbar>
    <!-- Content -->
    <div flex="90" id="mainFrame" ng-include="fc.template" fullheight scrolly="fc.scroll()"></div>
</body>