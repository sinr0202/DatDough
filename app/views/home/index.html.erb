<body class="noScrollbar" layout="column" ng-controller="ToolbarController as tb">
    <md-toolbar id="toolbar" flex="10">
        <div class="md-toolbar-tools">

            <div layout="row" layout-align="start start" flex="15">
                <h1 class="logo" ng-click="tb.selectView(0)">DatDough</h1>
            </div>

            <span flex></span>

            <div class="icon-container" layout="row" layout-align="end center">
            	<div ng-show="tb.isLoggedIn">
    	        	<i title="Settings" class="material-icons">settings</i>
    	        	<i title="Stats" class="material-icons">assessment</i>
    	            <i title="Logout" class="material-icons">exit_to_app</i>
    	        </div>
    	        <div ng-show="!tb.isLoggedIn" layout="row">
                    <div class="signUpBtn" ng-click="tb.selectView(2)" layout="row" layout-align="center center">
                        <i title="Sign Up" class="material-icons">create</i>
                        <span>Sign Up</span>
                    </div>
                    <div class="signInBtn" ng-click="tb.selectView(1)" layout="row" layout-align="center center">
    	        	    <i title="Sign In" class="material-icons">exit_to_app</i>
                        <span>Sign In</span>
                    </div>
    	        </div>
            </div>
            
        </div>
    </md-toolbar>

    <!-- Content -->
    <div flex="90" ng-include="tb.template" fullheight></div>
</body>